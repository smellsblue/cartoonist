<h2>Not yet posted</h2>

<ul>
  <% @unposted.each do |comic| %>
    <li>
      <%= comic.formatted_posted_at "" %>
      <a href="/comic_admin/<%= comic.number %>/edit"><%= comic.title %></a>
      (<a href="/comic_admin/<%= comic.number %>/preview">preview</a>)
    </li>
  <% end %>
</ul>

<h2>Posted</h2>

<ul>
  <% @posted.each do |comic| %>
    <li>
      <%= comic.formatted_posted_at "" %>
      <a href="/comic_admin/<%= comic.number %>/edit"><%= comic.title %></a>
      (<a href="/comic_admin/<%= comic.number %>/preview">preview</a>)
      (<a href="/<%= comic.number %>">show</a>)
    </li>
  <% end %>
</ul>
