<% content_for :subtabs do %>
  <a class="subtab" href="/"><%= t "admin.layout.comic.latest" %></a>
  <a class="subtab" href="/comic_admin"><%= t "admin.layout.comic.list" %></a>
  <a class="subtab" href="/comic_admin/new"><%= t "admin.layout.comic.new" %></a>
  <% if @edit_last_number && @edit_last_number > 0 %>
    <a class="subtab" href="/comic_admin/<%= @edit_last_number %>/edit"><%= t "admin.layout.comic.edit_last" %></a>
  <% end %>
  <% if @edit_next_number %>
    <a class="subtab" href="/comic_admin/<%= @edit_next_number %>/edit"><%= t "admin.layout.comic.edit_next" %></a>
  <% end %>
  <a class="subtab" href="/comic_admin/preview"><%= t "admin.layout.comic.preview" %></a>
<% end %>

<% content_for :page_title, t("admin.layout.comic.section") %>
<% content_for(:content) { yield } %>
<%= render :template => "layouts/admin" %>
