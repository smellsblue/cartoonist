<h2><%= t "sites.new.subtitle" %></h2>

<%= form_tag "/admin/sites", :method => :post do %>
  <p>
    <%= t "sites.new.name" %> <input type="text" name="name" value="" />
  </p>

  <p>
    <%= t "sites.new.description" %> <input type="text" name="description" value="" size="75" />
  </p>

  <p>
    <label>
      <%= t "sites.new.enabled" %>
      <input type="checkbox" name="enabled" value="true" checked="checked" />
    </label>
  </p>

  <p>
    <%= t "sites.new.domain.name" %>
    <input type="text" name="domains[new][name]" value="" />
    <small><em><%= t "sites.new.domain.leave_name_blank_help" %></em></small>
  </p>

  <p>
    <%= t "sites.new.domain.description" %>
    <input type="text" name="domains[new][description]" value="" />
  </p>

  <p>
    <label>
      <%= t "sites.new.domain.enabled" %>
      <input type="checkbox" name="domains[new][enabled]" value="true" checked="checked" />
    </label>
  </p>

  <p>
    <label>
      <%= t "sites.new.domain.admin_enabled" %>
      <input type="checkbox" name="domains[new][admin_enabled]" value="true" checked="checked" />
    </label>
  </p>

  <input type="submit" value="<%= t "sites.new.save" %>" />
<% end %>
