<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
  <channel>
    <title><%= yield :rss_title %></title>
    <description><%= this_site.settings[:site_heading] %></description>
    <link>http://<%= this_site.settings[:domain] %>/</link>
    <pubDate><%= yield :pub_date %></pubDate>
    <lastBuildDate><%= yield :pub_date %></lastBuildDate>
    <image>
      <url>http://<%= this_site.settings[:domain] %><%= asset_path Cartoonist::Theme.rss_logo %></url>
      <title><%= this_site.settings[:site_name] %></title>
      <link>http://<%= this_site.settings[:domain] %></link>
    </image>
    <%= yield %>
  </channel>
</rss>
